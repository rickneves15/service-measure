generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Measurement {
  measure_uuid     String          @id
  customer_code    String
  image_url        String
  measure_type     MeasurementType
  measure_value    String
  has_confirmed    Boolean         @default(false)
  measure_datetime DateTime        @default(now()) @db.Date

  @@map("measurements")
}

enum MeasurementType {
  WATER
  GAS
}
